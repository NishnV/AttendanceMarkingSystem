<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a">

    <!-- Top Toolbar in a Separate Pane with Centered Title -->
    <RelativeLayout
        android:id="@+id/top_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_more"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFFFF"
            android:layout_alignParentStart="true"
            android:contentDescription="Menu" />

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Leave and Attendance"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

        <ImageButton
            android:id="@+id/logout_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_lock_power_off"
            android:background="?android:attr/selectableItemBackground"
            android:tint="#FFFFFF"
            android:layout_alignParentEnd="true"
            android:contentDescription="Logout" />
    </RelativeLayout>

    <!-- Main Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_toolbar"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Leave Applications Section -->
            <TextView
                android:id="@+id/leave_applications_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your leave applications"
                android:textColor="#BB86FC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/leave_applications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:elevation="4dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/leave1_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Personal Leave"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/leave1_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sep 1, 2021 - Sep 2, 2021"
                        android:textColor="#AAAAAA"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/leave1_view_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View details"
                        android:backgroundTint="#7D3C98"
                        android:textColor="#FFFFFF" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_gravity="center_horizontal">

                    <TextView
                        android:id="@+id/leave2_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sick Leave"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/leave2_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sep 1, 2021 - Sep 2, 2021"
                        android:textColor="#AAAAAA"
                        android:layout_marginBottom="8dp" />

                    <Button
                        android:id="@+id/leave2_view_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View details"
                        android:backgroundTint="#7D3C98"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>

            <!-- Attendance Overview Section -->
            <TextView
                android:id="@+id/attendance_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your attendance overview"
                android:textColor="#BB86FC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/attendance_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/present_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Present"
                        android:textColor="#BB86FC"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/present_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:padding="16dp"
                    android:elevation="4dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/absent_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Absent"
                        android:textColor="#BB86FC"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/absent_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="#333333"
                    android:padding="16dp"
                    android:elevation="4dp">

                    <TextView
                        android:id="@+id/late_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Late"
                        android:textColor="#BB86FC"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:id="@+id/late_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="32sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Monthly Attendance Section -->
            <TextView
                android:id="@+id/monthly_attendance_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monthly attendance"
                android:textColor="#BB86FC"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:id="@+id/monthly_attendance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:weightSum="7">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jan"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Feb"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mar"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apr"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="May"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="80dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jun"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="bottom">

                    <View
                        android:layout_width="30dp"
                        android:layout_height="120dp"
                        android:background="#7D3C98" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jul"
                        android:textColor="#FFFFFF"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>